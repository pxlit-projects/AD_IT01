<UserControl x:Class="ModernUINavigationApp1.Pages.Welkom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Welkom op de desktopapplicatie van FINAH-NAH!" Style="{StaticResource Heading2}" />
                <TextBlock Text="Gebruik de bovenstaande navigatie om te navigeren in de desktopapplicatie" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
